{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/api/*": ["app/api/src/*"],
      "@app/mobile/*": ["app/mobile/src/*"],
      "@shared/*": ["app/api/src/shared/*"] 
    }
  }
}